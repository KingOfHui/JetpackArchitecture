<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/etSub"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text="-"
        android:background="#F8F8F8"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/gl_v_60"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etAddAndSub"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#F8F8F8"
        android:gravity="center"
        android:inputType="none"
        android:focusable="false"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/etAdd"
        app:layout_constraintLeft_toLeftOf="@id/gl_v_60"
        app:layout_constraintRight_toLeftOf="@id/gl_v_80"
        app:layout_constraintTop_toTopOf="@id/etAdd" />

    <TextView
        android:id="@+id/etAdd"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text="+"
        android:textColor="@color/black"
        android:gravity="center"
        android:textStyle="bold"
        android:background="#F8F8F8"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/gl_v_80"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_v_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_v_80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66" />
</androidx.constraintlayout.widget.ConstraintLayout>