<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.whdx.base.util.binding.recyclerview.LineDivideManagers"/>

        <variable
            name="vm"
            type="com.whdx.home.vm.MineViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/personal_center"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="28dp"
            android:src="@drawable/ic_settings_white"
            app:layout_constraintBottom_toBottomOf="@id/tv_title"
            app:layout_constraintRight_toRightOf="parent" />

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:refreshing="@{vm.refreshing}"
            app:loadMoreEnable="@{false}"
            app:onRefreshListener="@{()->vm.requestInviteData()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_open_bid"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:background="@drawable/shape_withdraw_text_bg"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/guideline5"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_withdraw"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:background="@drawable/shape_rect_stroke_text_bg"
                    android:gravity="center"
                    android:text="@string/my_invite_code"
                    android:textColor="#6F83FF"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@id/guideline5"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    android:onClick="@{()->vm.copyAddress()}"
                    android:text="@{@string/address_id(vm.userInfoLive.address)}"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_open_bid"
                    tools:text="我的地址：jfkdasfkldsjflsdjlfsjdlaf" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/rcl_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@mipmap/img_net_data_bg"
                    app:layout_constraintTop_toBottomOf="@id/tv_address"
                    app:rv_cornerRadius="5dp"
                    tools:layout_editor_absoluteX="20dp">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/gl_v_50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />

                    <com.whdx.base.ui.view.CustomVerticalView
                        android:id="@+id/cvv_net_total_hashrate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        app:bottom_textStr="@string/my_invite_num"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/gl_v_50"
                        app:layout_constraintTop_toTopOf="parent"
                        app:topStr="@{vm.inviteData.lowerLevel1Num , default =`0`}" />

                    <com.whdx.base.ui.view.CustomVerticalView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        app:bottom_textStr="@string/invite_bonus"
                        app:layout_constraintLeft_toRightOf="@id/gl_v_50"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:topStr="@{vm.inviteData.lowerLevel1Bonus,default =`0`}" />

                    <!--            app:topStr="@{String.valueOf(vm.MNetDataLive.net_all_energy)}"-->
                    <com.whdx.base.ui.view.CustomVerticalView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="20dp"
                        app:bottom_textStr="@string/rebate_today"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/gl_v_50"
                        app:layout_constraintTop_toBottomOf="@id/cvv_net_total_hashrate"
                        app:topStr="@{vm.inviteData.yesterday_member_bonus,default =`0`}" />

                    <com.whdx.base.ui.view.CustomVerticalView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="30dp"
                        app:bottom_textStr="@string/history_rebate"
                        app:layout_constraintLeft_toRightOf="@id/gl_v_50"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cvv_net_total_hashrate"
                        app:topStr="@{vm.inviteData.member_bonus,default =`0`}" />
                    <!--            app:topStr="@{String.valueOf(vm.MNetDataLive.btw_price)}"-->
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/my_invite_record"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rcl_top" />

                <com.whdx.base.ui.view.RoundConstraintLayout                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/dimen_20dp"
                    app:rv_backgroundColor="#3B4669"
                    app:rv_cornerRadius="5dp"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingTop="@dimen/dimen_20dp"
                    android:paddingRight="@dimen/dimen_10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="@string/time"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/guideline"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/address"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            app:layout_constraintLeft_toRightOf="@id/guideline"
                            app:layout_constraintRight_toLeftOf="@id/guideline2"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/level"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            app:layout_constraintLeft_toRightOf="@id/guideline2"
                            app:layout_constraintRight_toLeftOf="@id/guideline3"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_tip_bonus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bonus"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            app:layout_constraintRight_toLeftOf="@id/tv_symbol"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_symbol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(USDT)"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="@id/tv_tip_bonus"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.22" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.57" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.72" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:background="#4C587D"
                        app:layout_constraintTop_toBottomOf="@id/cl_title" />

                    <com.scwang.smartrefresh.layout.SmartRefreshLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/view"
                        bind:autoRefresh="@{vm.autoRefresh}"
                        bind:hasMore="@{vm.hasMore}"
                        bind:onLoadMoreListener="@{()->vm.tryToLoadNext()}"
                        bind:onRefreshListener="@{()->vm.refresh()}"
                        bind:refreshEnable="@{false}"
                        bind:refreshing="@{vm.refreshing}">

                        <com.whdx.base.ui.view.JRecyclerView
                            android:id="@+id/rvInvite"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:empty_image="@mipmap/icon_data_empty"
                            app:empty_text_gravity="top"
                            app:empty_text_top_margin = "50dp"
                            app:empty_text="@string/no_data"

                            app:linearManager="@{LineDivideManagers.INSTANCE.horizontal()}"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
                </com.whdx.base.ui.view.RoundConstraintLayout >
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>