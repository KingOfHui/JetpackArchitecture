<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.whdx.base.util.binding.recyclerview.LineDivideManagers"/>
        <variable
            name="vm"
            type="com.whdx.home.vm.RankViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <com.whdx.base.ui.view.CustomTitleBarView
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isShow_left_img="true"
            app:layout_constraintTop_toTopOf="parent"
            app:text_color="@color/white"
            app:title_textStr="@string/bonus_rank" />

        <com.whdx.base.ui.view.RoundConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/titleBar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:rv_backgroundColor="#3B4669"
            app:rv_cornerRadius="@dimen/dimen_5dp"
            android:layout_margin="@dimen/dimen_20dp"
            android:padding="@dimen/dimen_20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rank"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/guideline2"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/address"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    app:layout_constraintLeft_toRightOf="@id/guideline2"
                    app:layout_constraintRight_toLeftOf="@id/guideline3"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bonus_usdt"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    app:layout_constraintLeft_toRightOf="@id/guideline3"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.20" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.7" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view"
                app:layout_constraintTop_toBottomOf="@id/cl_title"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="#4C587D" />

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/view"
                app:layout_constraintBottom_toBottomOf="parent"
                bind:hasMore="@{vm.hasMore}"
                bind:onLoadMoreListener="@{()->vm.tryToLoadNext()}"
                bind:onRefreshListener="@{()->vm.refresh()}"
                bind:autoRefresh="@{vm.autoRefresh}"
                bind:refreshing="@{vm.refreshing}">

                <com.whdx.base.ui.view.FixRecyclerView
                    android:id="@+id/rvRank"
                    app:linearManager="@{LineDivideManagers.INSTANCE.horizontal()}"
                    app:empty_image="@mipmap/icon_data_empty"
                    app:empty_text_gravity="top"
                    app:empty_text_top_margin = "90dp"
                    app:empty_text="@string/no_data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        </com.whdx.base.ui.view.RoundConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>