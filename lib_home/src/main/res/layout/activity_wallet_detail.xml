<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <com.whdx.base.ui.view.CustomTitleBarView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title_textStr="@string/my_wallet"
            app:layout_constraintTop_toTopOf="parent"
            app:text_color="@color/white"
            app:isShow_left_img="true"
            android:id="@+id/titleBar"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/titleBar"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/ivAvator"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@mipmap/icon_logo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
            <TextView
                android:layout_marginTop="@dimen/dimen_15dp"
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="fjkdlsajfdsldfdsfdsfds"
                android:textColor="@color/white"
                android:textSize="12dp"
                app:layout_constraintTop_toBottomOf="@id/ivAvator"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <com.whdx.base.ui.view.RoundConstraintLayout
                android:id="@+id/rclWalletName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvAddress"
                app:rv_backgroundEndColor="#333D61"
                app:rv_backgroundStartColor="#5A6892"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_30dp"
                app:rv_cornerRadius="5dp"
                >
                <TextView
                    android:id="@+id/tvWalletName"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_70dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:text="@string/wallet_name"
                    android:textColor="@color/white"
                    android:alpha="0.5"
                    android:textSize="14dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/ivForward"/>
                <TextView
                    android:id="@+id/tvWalletNameTip"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_70dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:text="@string/wallet_name"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <ImageView
                    android:id="@+id/ivForward"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_70dp"
                    android:src="@drawable/ic_arrow_forward"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    android:foregroundTint="@color/white"/>
                <!--<View style="@style/LineStyle"
                    android:layout_height="0.5dp"
                    android:background="#4C587D"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    app:layout_constraintTop_toBottomOf="@id/tvExportKey"/>-->

            </com.whdx.base.ui.view.RoundConstraintLayout>
            <com.whdx.base.ui.view.RoundConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/rclWalletName"
                app:rv_backgroundEndColor="#333D61"
                app:rv_backgroundStartColor="#5A6892"
                android:layout_margin="@dimen/dimen_20dp"
                app:rv_cornerRadius="5dp"
                >
                <TextView
                    android:id="@+id/tvExportKey"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_70dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:text="@string/export_key"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_70dp"
                    android:src="@drawable/ic_arrow_forward"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    android:foregroundTint="@color/white"/>
                <!--<View style="@style/LineStyle"
                    android:layout_height="0.5dp"
                    android:background="#4C587D"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    app:layout_constraintTop_toBottomOf="@id/tvExportKey"/>-->

            </com.whdx.base.ui.view.RoundConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/tvDelete"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:layout_marginBottom="@dimen/dimen_50dp"
            android:background="@color/color_4D66FF"
            android:text="@string/delete_wallet"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>