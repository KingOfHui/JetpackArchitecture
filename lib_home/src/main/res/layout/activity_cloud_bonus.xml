<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.whdx.base.util.binding.recyclerview.LineDivideManagers"/>
        <import type="java.math.BigDecimal"/>
        <variable
            name="vm"
            type="com.whdx.home.vm.BonusViewModel" />

        <variable
            name="model"
            type="com.whdx.data.data.product.InvestProductItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <com.whdx.base.ui.view.CustomTitleBarView
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isShow_left_img="true"
            app:layout_constraintTop_toTopOf="parent"
            app:text_color="@color/white"
            app:title_textStr="@string/cloud_power_bonus_detail" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:text="@{@string/buy_time(model.create_time)}"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleBar" />

        <com.whdx.base.ui.view.RoundConstraintLayout
            android:id="@+id/cl_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:background="#5A6892"
            app:layout_constraintTop_toBottomOf="@id/tvTime"
            app:rv_backgroundEndColor="#333D61"
            app:rv_backgroundStartColor="#5A6892"
            app:rv_cornerRadius="4dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="5dp"
                android:padding="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/img_mineral" />

            <TextView
                android:id="@+id/tvReleaseMutiple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:text="@{@string/power_bonus(model.prod_release_multiple)}"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/already_buy"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvReleaseMutiple"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="@drawable/shape_cloud_buy_bg"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingRight="@dimen/dimen_10dp"/>
            <TextView
                android:id="@+id/tvStorage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@{@string/power_is(model.prod_storage)}"
                android:textColor="@color/color_94A0C1"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/tvReleaseMutiple"
                app:layout_constraintTop_toBottomOf="@+id/tvReleaseMutiple"
                tools:text="分储算例合约2.5T" />

            <TextView
                android:id="@+id/tvPerPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@{@string/price_usdt(model.prod_amount.stripTrailingZeros().toPlainString())}"
                android:textColor="@color/color_94A0C1"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/tvReleaseMutiple"
                app:layout_constraintTop_toBottomOf="@+id/tvStorage"
                tools:text="分储算例合约2.5T" />

            <TextView
                android:id="@+id/tvBuyNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@{@string/buy_num(model.quantity)}"
                android:textColor="@color/color_94A0C1"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/tvReleaseMutiple"
                app:layout_constraintTop_toBottomOf="@+id/tvPerPrice"
                tools:text="分储算例合约2.5T" />

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@{@string/prod_amount(model.amount.setScale(2,BigDecimal.ROUND_DOWN).stripTrailingZeros().toPlainString(),model.prod_symbol)}"
                android:textColor="@color/text_color_tip_94A0C1"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/tvStorage"
                app:layout_constraintTop_toBottomOf="@+id/tvBuyNum"
                tools:text="总额度:10000USDT" />

            <View
                android:id="@+id/divider2"
                android:layout_width="345dp"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:background="#4C587D"
                app:layout_constraintTop_toBottomOf="@+id/tvAmount"
                tools:layout_editor_absoluteX="14dp" />
            <TextView
                android:id="@+id/tvMaxBonus"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:text="@string/max_bonus"
                android:textColor="@color/text_color_tip_94A0C1"
                android:textSize="10sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:gravity="center"
                android:text="@{model.release_amount.setScale(2,BigDecimal.ROUND_DOWN).stripTrailingZeros().toPlainString()+`USDT`}"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:layout_constraintLeft_toRightOf="@id/tvMaxBonus"
                app:layout_constraintTop_toBottomOf="@id/divider2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:gravity="center"
                android:text="@string/bonus_detail"
                android:textColor="@color/text_color_tip_94A0C1"
                android:visibility="gone"
                app:layout_constraintRight_toLeftOf="@id/iv_arrow_forward"
                app:layout_constraintTop_toBottomOf="@id/divider2" />

            <ImageView
                android:id="@+id/iv_arrow_forward"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_40dp"
                android:paddingRight="@dimen/dimen_20dp"
                android:src="@drawable/ic_arrow_forward"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider2" />


            <!-- <TextView
                 android:id="@+id/textView5"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginEnd="15dp"
                 android:text="立即租借"
                 android:textSize="11sp"
                 android:textColor="@color/white"
                 android:paddingTop="7dp"
                 app:layout_constraintBaseline_toBaselineOf="@id/tvAmount"
                 android:paddingBottom="6dp"
                 android:paddingStart="12dp"
                 android:paddingEnd="12dp"
                 android:background="@drawable/shape_rect_text_border"
                 tools:visibility="invisible"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintTop_toTopOf="@+id/tvAmount" />
             &lt;!&ndash;            app:invisible="@{safeUnbox(model.state)==1}"&ndash;&gt;
     -->
        </com.whdx.base.ui.view.RoundConstraintLayout>

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:text="@string/mineral_bonus_record"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:layout_marginRight="@dimen/dimen_20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_tip"
            app:layout_constraintBottom_toBottomOf="@id/tv_tip"
            android:text="@{@string/already_bonus(model.bonus.setScale(2,BigDecimal.ROUND_DOWN).stripTrailingZeros().toPlainString())}"/>
        <com.whdx.base.ui.view.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            app:rv_backgroundColor="#3B4669"
            app:rv_cornerRadius="4dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tv_tip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/bonus"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/time"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <View style="@style/LineStyle"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_marginLeft="@dimen/dimen_20dp"/>

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                bind:hasMore="@{vm.hasMore}"
                bind:onLoadMoreListener="@{()->vm.tryToLoadNext()}"
                bind:onRefreshListener="@{()->vm.refresh(model.id)}"
                bind:refreshing="@{vm.refreshing}">

                <com.whdx.base.ui.view.JRecyclerView
                    android:id="@+id/rvBonus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    app:empty_image="@mipmap/icon_data_empty"
                    app:empty_text_gravity="top"
                    app:empty_text_top_margin = "50dp"
                    app:empty_text="@string/no_data"
                    app:linearManager="@{LineDivideManagers.INSTANCE.horizontal()}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    />
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        </com.whdx.base.ui.view.RoundLinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>