<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <com.whdx.base.ui.view.CustomTitleBarView
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title_textStr="@string/backup_mnemonic"
            app:text_color="@color/white"
            app:isShow_left_img="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:text="@string/zjc_sure_view"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:text="@string/zjc_click_in_order"
            android:textColor="@color/text_color_tip_94A0C1" />


        <com.qmuiteam.qmui.widget.QMUIFloatLayout
            android:id="@+id/qfl_selected_words"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:background="@color/color_edit_bg"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingTop="@dimen/dimen_20dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_20dp">

        </com.qmuiteam.qmui.widget.QMUIFloatLayout>


        <com.qmuiteam.qmui.widget.QMUIFloatLayout
            android:id="@+id/qfl_content"
            android:layout_margin="@dimen/dimen_20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/check_zjc_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_41dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_40dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:background="@color/color_4D66FF"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
             />


    </LinearLayout>
</layout>
