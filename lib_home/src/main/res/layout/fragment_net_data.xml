<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.whdx.home.vm.NetDataViewModel" />

        <variable
            name="netData"
            type="com.whdx.data.data.NetData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/net_power"
            android:textColor="@color/white"
            android:textSize="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:loadMoreEnable="@{false}"
            app:onRefreshListener="@{()->vm.getNetData()}"
            app:refreshing="@{vm.refreshing}">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rcl_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:background="@mipmap/img_net_data_bg"
                        app:layout_constraintTop_toTopOf="parent"
                        app:rv_cornerRadius="5dp"
                        tools:layout_editor_absoluteX="20dp">

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/gl_v_50"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.5" />

                        <com.whdx.base.ui.view.CustomVerticalView
                            android:id="@+id/cvv_net_total_hashrate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            app:bottom_textStr="@string/net_all_storage"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/gl_v_50"
                            app:layout_constraintTop_toTopOf="parent"
                            app:topStr="@{vm.MNetDataLive.net_all_storage , default =`0`}" />

                        <com.whdx.base.ui.view.CustomVerticalView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            app:bottom_textStr="@string/net_all_power"
                            app:layout_constraintLeft_toRightOf="@id/gl_v_50"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:topStr="@{vm.MNetDataLive.net_all_bonus,default =`0`}" />

                        <!--            app:topStr="@{String.valueOf(vm.MNetDataLive.net_all_energy)}"-->
                        <com.whdx.base.ui.view.CustomVerticalView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            app:bottom_textStr="@string/biw_price"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/gl_v_50"
                            app:layout_constraintTop_toBottomOf="@id/cvv_net_total_hashrate"
                            app:topStr="@{vm.MNetDataLive.btw_price,default =`0`}" />

                        <!--            app:topStr="@{String.valueOf(vm.MNetDataLive.btw_price)}"-->
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.whdx.base.ui.view.RoundConstraintLayout
                        android:id="@+id/cl_middle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        app:layout_constraintTop_toBottomOf="@id/rcl_top"
                        app:rv_backgroundEndColor="#333D61"
                        app:rv_backgroundStartColor="#5A6892"
                        app:rv_cornerRadius="5dp"
                        tools:layout_editor_absoluteX="20dp">

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/gl_v_50_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.5" />

                        <com.whdx.base.ui.view.CustomVerticalView
                            android:id="@+id/cvv_total_mineral"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            app:bottom_textStr="@string/net_total_mineral"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/gl_v_50_2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:topStr="@{vm.MNetDataLive.count_invest, default=`0`}" />

                        <com.whdx.base.ui.view.CustomVerticalView
                            android:id="@+id/cvv_max_energy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            app:bottom_textStr="@string/max_node_bonus"
                            app:layout_constraintLeft_toRightOf="@id/gl_v_50_2"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:topStr="@{vm.MNetDataLive.max_node_bonus, default=`0`}" />

                        <com.whdx.base.ui.view.CustomVerticalView
                            android:id="@+id/cvv_my_star"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            app:bottom_textStr="@string/mine_performance"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/gl_v_50"
                            app:layout_constraintTop_toBottomOf="@id/cvv_total_mineral"
                            app:topStr="@{vm.MNetDataLive.mine_performance, default=`0`}" />

                        <com.whdx.base.ui.view.CustomVerticalView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            app:bottom_textStr="@string/mine_performance_node"
                            app:layout_constraintLeft_toRightOf="@id/gl_v_50_2"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@id/cvv_my_star"
                            app:topStr="@{vm.MNetDataLive.mine_performance_node, default=`0`}" />
                    </com.whdx.base.ui.view.RoundConstraintLayout>

                    <TextView
                        android:id="@+id/tv_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:text="@string/max_level_bonus"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:visibility="gone"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cl_middle" />

                    <com.whdx.base.ui.view.RoundConstraintLayout
                        android:id="@+id/cl_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:paddingBottom="@dimen/dimen_20dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_bottom"
                        app:rv_backgroundEndColor="#333D61"
                        app:rv_backgroundStartColor="#5A6892"
                        app:rv_cornerRadius="5dp"
                        tools:layout_editor_absoluteX="20dp">

                        <TextView
                            android:id="@+id/tv_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_20dp"
                            android:paddingBottom="@dimen/dimen_20dp"
                            android:text="@string/net_level"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <RelativeLayout
                            android:id="@+id/relativeLayout2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toStartOf="@+id/relativeLayout"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_level">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_net_level_5" />

                            <TextView
                                android:id="@+id/tv_level_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="55dp"
                                android:text="@string/satellite"
                                android:textColor="@color/white"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/tv_level_5_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_level_5"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dimen_5dp"
                                android:text="@{@string/level_people(vm.MNetDataLive.count_level1)}"
                                android:textColor="@color/white"
                                android:textSize="12dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relativeLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toStartOf="@+id/relativeLayout3"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/relativeLayout2"
                            app:layout_constraintTop_toBottomOf="@id/tv_level">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_net_level_4" />

                            <TextView
                                android:id="@+id/tv_level_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="55dp"
                                android:text="@string/star"
                                android:textColor="@color/white"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/tv_level_4_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_level_4"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dimen_5dp"
                                android:text="@{@string/level_people(vm.MNetDataLive.count_level2)}"
                                android:textColor="@color/white"
                                android:textSize="12dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relativeLayout3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toStartOf="@+id/relativeLayout4"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/relativeLayout"
                            app:layout_constraintTop_toBottomOf="@id/tv_level">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_net_level_3" />

                            <TextView
                                android:id="@+id/tv_level_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="55dp"
                                android:text="@string/planet"
                                android:textColor="@color/white"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/tv_level_3_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_level_3"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dimen_5dp"
                                android:text="@{@string/level_people(vm.MNetDataLive.count_level3)}"
                                android:textColor="@color/white"
                                android:textSize="12dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relativeLayout4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toStartOf="@+id/relativeLayout5"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/relativeLayout3"
                            app:layout_constraintTop_toBottomOf="@id/tv_level">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_net_level_2" />

                            <TextView
                                android:id="@+id/tv_level_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="55dp"
                                android:text="@string/Galaxy"
                                android:textColor="@color/white"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/tv_level_2_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_level_2"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dimen_5dp"
                                android:text="@{@string/level_people(vm.MNetDataLive.count_level4)}"
                                android:textColor="@color/white"
                                android:textSize="12dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relativeLayout5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/relativeLayout4"
                            app:layout_constraintTop_toBottomOf="@id/tv_level">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_net_level_1" />

                            <TextView
                                android:id="@+id/tv_level_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="55dp"
                                android:text="@string/universe"
                                android:textColor="@color/white"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/tv_level_1_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_level_1"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dimen_5dp"
                                android:text="@{@string/level_people(vm.MNetDataLive.count_level5)}"
                                android:textColor="@color/white"
                                android:textSize="12dp" />
                        </RelativeLayout>

                    </com.whdx.base.ui.view.RoundConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>