<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全网算力"
            android:textColor="@color/white"
            android:layout_margin="20dp"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.whdx.base.ui.view.RoundConstraintLayout
            android:id="@+id/rcl_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:rv_cornerRadius="5dp"
            app:rv_backgroundStartColor="#5A6892"
            app:rv_backgroundEndColor="#333D61"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            tools:layout_editor_absoluteX="20dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_v_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />
            <com.whdx.base.ui.view.CustomVerticalView
                android:id="@+id/cvv_net_total_hashrate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/gl_v_50"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:bottom_textStr="全网总算力"
                app:top_textStr="7643.06" />
            <com.whdx.base.ui.view.CustomVerticalView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/gl_v_50"
                app:bottom_textStr="全网总能量（BTW）"
                app:top_textStr="3444.04" />
            <com.whdx.base.ui.view.CustomVerticalView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cvv_net_total_hashrate"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/gl_v_50"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp"
                app:bottom_textStr="全网总算力"
                app:top_textStr="7643.06" />
        </com.whdx.base.ui.view.RoundConstraintLayout>
        <com.whdx.base.ui.view.RoundConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:rv_cornerRadius="5dp"
            app:rv_backgroundStartColor="#5A6892"
            app:rv_backgroundEndColor="#333D61"
            app:layout_constraintTop_toBottomOf="@id/rcl_top"
            tools:layout_editor_absoluteX="20dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_v_50_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />
            <com.whdx.base.ui.view.CustomVerticalView
                android:id="@+id/cvv_total_mineral"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/gl_v_50_2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:bottom_textStr="全网总算力"
                app:top_textStr="7643.06" />
            <com.whdx.base.ui.view.CustomVerticalView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/gl_v_50_2"
                app:bottom_textStr="全网总能量（BTW）"
                app:top_textStr="3444.04" />
            <com.whdx.base.ui.view.CustomVerticalView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cvv_total_mineral"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/gl_v_50"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp"
                app:bottom_textStr="全网总算力"
                app:top_textStr="7643.06" />
        </com.whdx.base.ui.view.RoundConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>