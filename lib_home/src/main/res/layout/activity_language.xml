<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.whdx.base.ui.view.CustomTitleBarView
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_textStr="@string/select_language"
        app:isShow_left_img="true"
        app:text_color="@color/white"
        app:layout_constraintTop_toTopOf="parent"/>
    <RadioGroup
        android:id="@+id/rgSelect"
        app:layout_constraintTop_toBottomOf="@id/titleBar"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/tv_en"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_41dp"
            android:gravity="center_vertical|right"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:text="@string/language_en"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:button="@drawable/selector_check_box_selected"/>
        <View style="@style/LineStyle"
            android:layout_height="0.5dp"
            android:background="#4C587D"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_en"/>

        <RadioButton
            android:id="@+id/tv_cn"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_height="@dimen/dimen_41dp"
            android:gravity="center_vertical|right"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:text="@string/language_cn"
            android:button="@drawable/selector_check_box_selected"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@id/tv_en"
            app:layout_constraintRight_toRightOf="parent"/>
        <View style="@style/LineStyle"
            android:layout_height="0.5dp"
            android:background="#4C587D"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_cn"/>
    </RadioGroup>


    <TextView
        android:id="@+id/tvSure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/sure"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:textColor="@color/white"
        android:background="@color/color_4D66FF"
        android:layout_marginBottom="100dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>