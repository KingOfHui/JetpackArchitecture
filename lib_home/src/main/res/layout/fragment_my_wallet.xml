<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.whdx.home.vm.MyWalletViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/my_funds"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:refreshing="@{vm.refreshing}"
        app:loadMoreEnable="@{false}"
        onRefreshListener="@{()->vm.getMyBalance()}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.whdx.base.ui.view.RoundConstraintLayout
            android:id="@+id/cl_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:rv_backgroundEndColor="#333D61"
            app:rv_backgroundStartColor="#545F81"
            android:paddingBottom="@dimen/dimen_20dp"
            app:rv_cornerRadius="4dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />
            <com.whdx.base.ui.view.CustomVerticalView
                android:id="@+id/cvv_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_20dp"
                app:bottom_textStr="@string/ny_balance_usdt"
                app:topStrLittleVisible="true"
                app:layout_constraintBottom_toTopOf="@id/cvv_bottom"
                app:layout_constraintTop_toTopOf="parent"
                app:topStr="@{vm.MBalanceLive.balance.toPlainString(),default=`0`}" />

            <View
                style="@style/LineStyle"
                android:layout_margin="@dimen/dimen_20dp"
                app:layout_constraintTop_toBottomOf="@id/cvv_top" />

            <com.whdx.base.ui.view.CustomVerticalView
                android:id="@+id/cvv_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginLeft="@dimen/dimen_20dp"
                app:bottom_textStr="@string/real_time_price"
                app:layout_constraintBottom_toTopOf="@id/tv_chongzhi"
                app:layout_constraintTop_toBottomOf="@id/cvv_top"
                app:topStr="@{vm.MBalanceLive.btw_price.toPlainString(),default=`0`}" />
            <TextView
                android:id="@+id/tv_chongzhi"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:gravity="center"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:onClick="@{()->vm.getDepositAddress()}"
                android:text="@string/deposit"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:background="@drawable/shape_withdraw_text_bg"
                app:layout_constraintTop_toBottomOf="@id/cvv_bottom"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/guideline"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tv_withdraw"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:gravity="center"
                android:text="@string/withdraw"
                android:background="@drawable/shape_withdraw_text_bg"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/cvv_bottom"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/guideline"
                android:layout_marginBottom="@dimen/dimen_20dp" />

        </com.whdx.base.ui.view.RoundConstraintLayout>

        <com.whdx.base.ui.view.RoundConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/dimen_20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_info"
            app:rv_backgroundColor="#3B4669"
            app:rv_cornerRadius="4dp">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                app:tabTextAppearance="@style/HomeTabLayoutTextAppearance"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:tabBackground="@android:color/transparent"
                app:tabRippleColor="@android:color/transparent"
                app:tabPaddingStart="0dp"
                app:tabPaddingEnd="0dp"
                app:tabIndicator="@drawable/tab_indicator"
                app:tabIndicatorColor="@color/color_4D66FF"
                app:tabIndicatorAnimationDuration="@integer/config_navAnimTime"
                app:tabSelectedTextColor="@color/white"
                app:tabTextColor="@color/color_94A0C1" />

            <View
                style="@style/LineStyle"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                app:layout_constraintBottom_toTopOf="@id/viewPager" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tabLayout" />

        </com.whdx.base.ui.view.RoundConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>