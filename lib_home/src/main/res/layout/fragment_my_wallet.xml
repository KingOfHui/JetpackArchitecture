<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.whdx.home.vm.MyWalletViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">


        <com.whdx.base.ui.view.CustomTitleBarView
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:title_textStr="我的余额"
            app:text_color="@color/white"
            app:isShow_left_img="true"/>

        <com.whdx.base.ui.view.RoundConstraintLayout
            android:id="@+id/cl_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_20dp"
            app:rv_cornerRadius="4dp"
            app:rv_backgroundStartColor="#545F81"
            app:rv_backgroundEndColor="#333D61"
            app:layout_constraintTop_toBottomOf="@id/titleBar">

            <com.whdx.base.ui.view.CustomVerticalView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/cvv_bottom"
                android:id="@+id/cvv_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_20dp"
                app:topStr="@{vm.MBalanceLive.balance.toPlainString(),default=`0`}"
                app:bottom_textStr="我的可体现余额(USDT)"/>
            <View
                app:layout_constraintTop_toBottomOf="@id/cvv_top"
                android:layout_margin="@dimen/dimen_20dp"
                style="@style/LineStyle"/>
            <com.whdx.base.ui.view.CustomVerticalView
                android:id="@+id/cvv_bottom"
                app:layout_constraintTop_toBottomOf="@id/cvv_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:topStr="@{vm.MBalanceLive.btw_price.toPlainString(),default=`0`}"
                app:bottom_textStr="今日BTW实时价格"/>
        </com.whdx.base.ui.view.RoundConstraintLayout>

        <com.whdx.base.ui.view.RoundConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/ll_footer"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            app:rv_cornerRadius="4dp"
            app:rv_backgroundStartColor="#545F81"
            app:rv_backgroundEndColor="#333D61"
            app:layout_constraintTop_toBottomOf="@id/cl_info">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                style="@style/HomeTabLayoutTextAppearance"
                app:tabTextColor="@color/color_94A0C1"
                app:tabSelectedTextColor="@color/white"
                app:tabIndicator="@drawable/tab_indicator"
                android:background="@color/qmui_config_color_transparent"/>
            <View style="@style/LineStyle"
                app:layout_constraintBottom_toTopOf="@id/viewPager"/>
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/tabLayout"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </com.whdx.base.ui.view.RoundConstraintLayout>
        <LinearLayout
            android:id="@+id/ll_footer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_marginLeft="@dimen/dimen_20dp">
            <TextView
                android:id="@+id/tv_chongzhi"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_weight="1"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:onClick="@{()->vm.getDepositAddress()}"
                android:textColor="@color/color_4D66FF"
                android:text="充值"/>
            <TextView
                android:id="@+id/tv_withdraw"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:text="提现"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>