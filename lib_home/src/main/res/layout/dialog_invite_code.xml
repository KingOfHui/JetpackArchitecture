<?xml version="1.0" encoding="utf-8"?>
<com.whdx.base.ui.view.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:rv_backgroundColor="@color/white"
    app:rv_cornerRadius="4dp">

    <ImageView
        android:id="@+id/ivClose"
        android:padding="@dimen/dp_10"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="end"
        android:src="@drawable/ic_close_black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15dp"
        android:gravity="center"
        android:text="我的邀请码"
        android:textColor="#888B9A"
        android:textSize="@dimen/sp_15" />


    <TextView
        android:id="@+id/common_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="24sp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:background="#979797"/>

    <TextView
        android:id="@+id/tvCopy"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:gravity="center"
        android:text="复制邀请码"
        android:textColor="@color/color_4D66FF"
        android:textSize="@dimen/sp_18"/>

</com.whdx.base.ui.view.RoundLinearLayout>
