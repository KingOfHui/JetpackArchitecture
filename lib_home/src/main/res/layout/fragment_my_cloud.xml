<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.whdx.base.util.binding.recyclerview.LineDivideManagers"/>

        <variable
            name="model"
            type="com.whdx.data.data.MyStorage" />
        <variable
            name="vm"
            type="com.whdx.home.vm.MyCloudViewModel" />
    </data>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        bind:hasMore="@{vm.hasMore}"
        bind:onLoadMoreListener="@{()->vm.tryToLoadNext()}"
        bind:onRefreshListener="@{()->vm.refresh()}"
        bind:refreshing="@{vm.refreshing}">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:elevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_scrollFlags="scroll">

                    <com.whdx.base.ui.view.RoundConstraintLayout
                        android:id="@+id/rcl_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:rv_backgroundEndColor="#333D61"
                        app:rv_backgroundStartColor="#5A6892"
                        app:rv_cornerRadius="5dp"
                        android:layout_marginBottom="@dimen/dimen_15dp"
                        tools:layout_editor_absoluteX="20dp">

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/gl_v_50_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.5" />

                        <com.whdx.base.ui.view.CustomVerticalView
                            android:id="@+id/cvv_total_mineral"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            app:bottom_textStr="我的总投资(USDT)"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/gl_v_50_2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:topStr="@{vm.MMyStorage.invest_amount,default =`0`}" />

                        <com.whdx.base.ui.view.CustomVerticalView
                            android:id="@+id/cvv_max_energy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            app:bottom_textStr="我的可提现余额(USDT)"
                            app:layout_constraintLeft_toRightOf="@id/gl_v_50_2"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:topStr="@{vm.MMyStorage.balance,default =`0`}" />

                        <View
                            android:id="@+id/divider"
                            android:layout_margin="20dp"
                            app:layout_constraintTop_toBottomOf="@id/cvv_max_energy"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="#4C587D"
                            app:layout_anchorGravity="center" />
                        <com.whdx.base.ui.view.CustomVerticalView
                            android:id="@+id/cvv_my_star"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="20dp"
                            app:bottom_textStr="我的今日收益(USDT)"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/gl_v_50"
                            app:layout_constraintTop_toBottomOf="@id/cvv_total_mineral"
                            app:topStr="@{vm.MMyStorage.member_bonus.toString(),default =`0`}" />

                        <com.whdx.base.ui.view.CustomVerticalView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            app:bottom_textStr="我的总收益(USDT)"
                            app:layout_constraintLeft_toRightOf="@id/gl_v_50_2"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@id/cvv_my_star"
                            app:topStr="@{vm.MMyStorage.member_bonus.toPlainString(),default=`0`}" />
                    </com.whdx.base.ui.view.RoundConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />


        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</layout>
