<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.whdx.data.data.wallet.DepositRecordItem" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_10dp">
        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:paddingRight="@dimen/dimen_10dp"
            app:layout_constraintRight_toLeftOf="@id/tvAmount"
            android:layout_height="wrap_content"
            android:text="@{model.address,default=``}"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="14dp"
            android:textColor="@color/text_color_tip_94A0C1"
            android:text="@{model.create_time,default=`-`}"
            />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@{`+`+model.amount+`BIW`,default=`-`}"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>