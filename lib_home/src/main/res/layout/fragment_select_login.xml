<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="110dp"
        android:layout_height="@dimen/dimen_110dp"
        android:layout_marginTop="130dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/icon_logo"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bit Talk"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_logo"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tv_name"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_name"
        android:textColor="@color/white"
        android:textSize="8sp"
        android:layout_marginLeft="3dp"
        android:text="1.0"
        />
    <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_logo"
        android:text="自由全球沟通，创造无限可能\n 区块链让个人社交、支付数据、财产归属于当前私钥"
        android:textSize="@dimen/sp_14"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:textColor="@color/text_color_tip_94A0C1"
        android:layout_marginTop="@dimen/dimen_15dp"
        />

    <TextView
        android:id="@+id/tvCreate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:text="@string/create_wallet"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_info"
        android:layout_marginTop="@dimen/dimen_70dp"
        android:textColor="#6F83FF"
        android:layout_marginLeft="@dimen/dimen_45dp"
        android:layout_marginRight="@dimen/dimen_45dp"
        android:textSize="@dimen/sp_15"
        android:background="@drawable/shape_rect_stroke_text_bg"
        />
    <TextView
        android:id="@+id/tvImport"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:text="@string/loading_wallet_sign_two"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvCreate"
        android:layout_marginTop="@dimen/dimen_25dp"
        android:layout_marginLeft="@dimen/dimen_45dp"
        android:layout_marginRight="@dimen/dimen_45dp"
        android:textColor="@color/white"
        android:background="@color/color_4D66FF"
        />




</androidx.constraintlayout.widget.ConstraintLayout>