<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.whdx.base.ui.view.CustomTitleBarView
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_textStr="设置"
        app:isShow_left_img="true"
        app:text_color="@color/white"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.whdx.base.ui.view.RoundConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titleBar"
        app:rv_backgroundEndColor="#333D61"
        app:rv_backgroundStartColor="#5A6892"
        android:layout_margin="@dimen/dimen_20dp"
        app:rv_cornerRadius="5dp"
        >
        <TextView
            android:id="@+id/tvLanguage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_70dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:text="@string/language"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_70dp"
            android:src="@drawable/ic_arrow_forward"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:foregroundTint="@color/white"/>
        <View style="@style/LineStyle"
            android:layout_height="0.5dp"
            android:background="#4C587D"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            app:layout_constraintTop_toBottomOf="@id/tvLanguage"/>

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_70dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:text="@string/already_is_latest"
            app:layout_constraintRight_toLeftOf="@id/ivArrow"
            android:textColor="@color/text_color_tip_94A0C1"
            android:textSize="@dimen/sp_14"
            android:layout_marginRight="@dimen/dimen_5dp"
            app:layout_constraintTop_toBottomOf="@id/tvLanguage"/>
        <TextView
            android:id="@+id/tv_update_version"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_70dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:text="@string/check_update"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            app:layout_constraintTop_toBottomOf="@id/tvLanguage"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_70dp"
            android:src="@drawable/ic_arrow_forward"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="@dimen/dimen_20dp"
            app:layout_constraintTop_toBottomOf="@id/tvLanguage"
            android:foregroundTint="@color/white"/>
        
    </com.whdx.base.ui.view.RoundConstraintLayout>
    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/exit"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:textColor="@color/white"
        android:background="@color/color_4D66FF"
        android:layout_marginBottom="100dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>