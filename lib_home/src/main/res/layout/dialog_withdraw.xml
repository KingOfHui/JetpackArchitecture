<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.whdx.base.ui.view.CommonTitleBarView
        android:id="@+id/titleBar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:isShow_left_img="true"
        app:title_textStr="请输入密码"
        app:left_img="@drawable/ic_arrow_back_black"
        app:isShow_right_img1="true"
        app:right_img1="@drawable/ic_close_black"/>
    <View
        android:id="@+id/view1"
        app:layout_constraintTop_toBottomOf="@id/titleBar"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/LineStyle"/>
   <!-- <TextView
        android:id="@+id/tvAddressTip"
