        style="@style/LineStyle"/>-->
    <TextView
        android:id="@+id/tvPasswordTip"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/deal_pwd"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/view1"
        android:layout_marginLeft="@dimen/dimen_20dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/etPWD"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_35dp"
        android:hint="@string/input_pwd"
        android:textColorHint="#C7C7C7"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:textSize="@dimen/sp_14"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/tvPasswordTip"
        android:background="@null"
        android:layout_marginRight="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="@id/tvPasswordTip"/>
    <CheckBox
        android:id="@+id/cbPwdStatus"
        android:layout_width="20dp"
        android:layout_height="14dp"
        app:layout_constraintTop_toTopOf="@id/tvPasswordTip"
        app:layout_constraintBottom_toBottomOf="@id/tvPasswordTip"
        android:layout_marginRight="@dimen/dimen_20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:button="@drawable/selector_cb_pwd"/>

    <View
        android:id="@+id/view3"
        app:layout_constraintTop_toBottomOf="@id/etPWD"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        style="@style/LineStyle"/>
    <TextView
        android:id="@+id/tvSure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45dp"
        android:text="@string/sure"
        app:layout_constraintTop_toTopOf="@id/view3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_40dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/selector_lease_bg"/>

</androidx.constraintlayout.widget.ConstraintLayout>