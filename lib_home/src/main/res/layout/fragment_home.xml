<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.whdx.home.HomeViewModel" />
        <import type="com.whdx.base.util.binding.recyclerview.LineManagers"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_background"
            app:layout_constraintTop_toTopOf="@id/tvTitle"
            />
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阿联酋云算力"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/tvTopic"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_topic"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这里是后续的公告内容，展示区域"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@id/tvTopic"
            app:layout_constraintLeft_toRightOf="@id/tvTopic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020.09.23"
            android:textSize="12sp"
            android:textColor="@color/color_94A0C1"
            app:layout_constraintTop_toTopOf="@id/tvTopic"
            app:layout_constraintRight_toRightOf="parent"/>


        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            bind:onRefreshListener="@{()->vm.refresh()}"
            bind:onLoadMoreListener="@{()->vm.tryToLoadNext()}"
            bind:refreshing="@{vm.refreshing}"
            bind:autoRefresh="@{vm.autoRefresh}"
            bind:hasMore="@{vm.hasMore}"
            app:layout_constraintTop_toBottomOf="@id/tvTopic"
            android:layout_marginTop="80dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                bind:linearManager="@{LineManagers.INSTANCE.horizontal()}"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
           <!-- <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>-->
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>