<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <com.whdx.base.ui.view.CustomTitleBarView
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title_textId="@string/change_wallet_name"
            app:layout_constraintTop_toTopOf="parent"
            app:right_textId="@string/complete"
            app:right_text_color="@color/white"
            app:isShow_left_img="true"/>
        <EditText
            android:id="@+id/etName"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_50dp"
            app:layout_constraintTop_toBottomOf="@id/titleBar"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:hint="请输入新的钱包名称"
            android:textSize="14dp"
            android:layout_marginStart="@dimen/dimen_30dp"
            android:layout_marginEnd="@dimen/dimen_30dp"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:textColorHint="@color/text_color_tip_94A0C1"
            />
        <View style="@style/LineStyle"
            android:layout_marginStart="@dimen/dimen_30dp"
            android:layout_marginEnd="@dimen/dimen_30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etName"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>