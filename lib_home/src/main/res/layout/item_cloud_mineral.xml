<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.whdx.data.data.product.ProductItem" />
    </data>

    <com.whdx.base.ui.view.RoundConstraintLayout
        app:rv_backgroundStartColor="#5A6892"
        app:rv_backgroundEndColor="#333D61"
        app:rv_cornerRadius="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="#5A6892">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:text="@string/liji_zujie"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:paddingTop="7dp"
            app:layout_constraintBaseline_toBaselineOf="@id/tvAmount"
            android:paddingBottom="6dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/shape_rect_text_border"
            tools:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvAmount" />
<!--            app:invisible="@{safeUnbox(model.state)==1}"-->

        <TextView
            android:id="@+id/tvStorage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@{@string/power_is(model.storage)}"
            tools:text="分出算例合约2.5T"
            android:textColor="@color/color_94A0C1"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/tvReleaseMutiple"
            app:layout_constraintTop_toBottomOf="@+id/tvReleaseMutiple" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:padding="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/img_mineral" />

        <TextView
            android:id="@+id/tvReleaseMutiple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:text="@{@string/power_bonus(model.release_multiple)}"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@{@string/price_is(model.amount+model.symbol)}"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/tvStorage"
            app:layout_constraintTop_toBottomOf="@+id/tvStorage" />
    </com.whdx.base.ui.view.RoundConstraintLayout>
</layout>