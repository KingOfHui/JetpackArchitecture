<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.whdx.base.ui.view.CustomTitleBarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_textStr="@string/withdraw_result"
        app:text_color="@color/white"
        app:isShow_left_img="true"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/titleBar"
        />
    <com.whdx.base.ui.view.RoundLinearLayout
        android:id="@+id/llInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@id/titleBar"
        android:orientation="vertical"
        app:rv_backgroundEndColor="#333D61"
        app:rv_backgroundStartColor="#5A6892"
        app:rv_cornerRadius="5dp"        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_success"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tip_withdraw_submit_success"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:textColor="@color/white"
            android:textSize="19dp"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arrived_after_24h"
            android:textColor="@color/text_color_tip_94A0C1"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dimen_20dp"
            />
    </com.whdx.base.ui.view.RoundLinearLayout>

    <TextView
        android:id="@+id/tvFinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/return_3s"
        app:layout_constraintTop_toBottomOf="@id/llInfo"
        android:gravity="center"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/white"
        android:padding="@dimen/dimen_10dp"
        android:background="@color/color_4D66FF"
        android:layout_margin="@dimen/dimen_20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>